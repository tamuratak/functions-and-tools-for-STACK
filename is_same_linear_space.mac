is_same_linear_space(a, x) := block([ret, a0, x0, am, xm, am_dim, i],
  ret : true,
  a0 : listify(a),
  x0 : listify(x),
  am : apply(matrix, a0),
  xm : apply(matrix, x0),
  ret: ret and is(rank(am) = rank(xm)),
  if ret then (
    am_dim : rank(am),
    for i:1 thru length(x0) do (
      m : apply(matrix, cons(x0[i], a0)),
      ret : ret and is(rank(m) = am_dim)
      )
    ),
  ret) ;

